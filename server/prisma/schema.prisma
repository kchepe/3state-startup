// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  firstName String
  lastName String
  password String
  phoneNumber String
  imageUrl String
  userType UserType
}

enum UserType {
  broker
  owner
  agent
  developer
  brokerage
}